void turn() :
{
  String c;
}
{
  c = constant()
  {
    if (directions.containsKey(c))
    {
      int giros = directions.get(c);
      int giro = 1;
      if (giros < 0)
      {
        giro = Math.floorMod(giros, 4);
      }
      else if (giros > 1)
      {
        giro = giros;
      }
      for (int i = 1; i <= giro; i++)
      {
        world.turnRight();
      }
      salida = "The robot has turned " + c;
    }
    else
    {
      throw new Error("The direction doesn't exist");
    }
  }
}

